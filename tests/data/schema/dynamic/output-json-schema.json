{
    "$$version": 1,
    "$schema": "http://json-schema.org/draft-04/schema#",
    "type": "object",
    "$$order": [
        "rules",
        "services"
    ],
    "required": [
        "rules",
        "services"
    ],
    "title": "Dynamic object.",
    "properties": {
        "rules": {
            "title": "Rules",
            "type": "object",
            "patternProperties": {
                "^[+-]?[0-9]+$": {
                    "type": "string",
                    "title": "Rule"
                }
            }
        },
        "services": {
            "type": "object",
            "title": "List of service endpoints per hostname",
            "patternProperties": {
                "hostname": {
                    "type": "array",
                    "items": {
                        "type": "string",
                        "format": "hostname"
                    }
                }
            }
        }
    }
}
