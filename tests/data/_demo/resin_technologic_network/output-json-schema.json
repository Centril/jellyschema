{
    "$schema": "http://json-schema.org/draft-04/schema#",
    "$$version": 1,
    "title": "ResinOS Technologic TS-4900 Configuration",
    "type": "object",
    "required": [
        "board",
        "network",
        "advanced"
    ],
    "$$order": [
        "board",
        "network",
        "advanced"
    ],
    "properties": {
        "board": {
            "$$order": [
                "cores"
            ],
            "properties": {
                "cores": {
                    "default": 1,
                    "oneOf": [
                        {
                            "enum": [
                                1
                            ],
                            "title": "Single"
                        },
                        {
                            "enum": [
                                4
                            ],
                            "title": "Quad"
                        }
                    ],
                    "type": "integer"
                }
            },
            "required": [
                "cores"
            ],
            "title": "CPU Cores",
            "type": "object"
        },
        "network": {
            "$$order": [
                "networks"
            ],
            "properties": {
                "networks": {
                    "items": {
                        "$$order": [
                            "ssid",
                            "psk"
                        ],
                        "properties": {
                            "psk": {
                                "title": "Network password",
                                "type": "string",
                                "writeOnly": true
                            },
                            "ssid": {
                                "title": "Network SSID",
                                "type": "string"
                            }
                        },
                        "required": [
                            "ssid",
                            "psk"
                        ],
                        "title": "WiFi Network",
                        "type": "object"
                    },
                    "type": "array"
                }
            },
            "required": [
                "networks"
            ],
            "title": "Network Connection",
            "type": "object"
        },

        "advanced": {
            "$$order": [
                "appUpdatePollInterval"
            ],
            "properties": {
                "appUpdatePollInterval": {
                    "default": 10,
                    "minimum": 10,
                    "title": "Application update poll interval",
                    "type": "integer"
                }
            },
            "required": [
                "appUpdatePollInterval"
            ],
            "title": "Advanced",
            "type": "object"
        }
    }
}
